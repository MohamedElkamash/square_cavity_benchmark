void scalarDirichletConditions(bcData *bc)
{
  if(bc->id == 1)
    bc->s = p_T_cold;
    
  if(bc->id == 2)
    bc->s = p_T_hot;
}

@kernel void buoyancy(const dlong Nelements, const dlong offset, @restrict const dfloat* temp, @restrict dfloat* source)
{
   for (dlong e = 0; e < Nelements; ++e ; @outer(0))
   {
     for (int n = 0; n < p_Np; ++n ; @inner(0))
     {
        const int id = e * p_Np + n;
        source[id + offset] = p_Ri * temp[id];
     }
   }
}
